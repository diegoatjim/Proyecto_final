<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="31dp"
        app:layout_constraintEnd_toEndOf="@+id/tvUsuario"
        app:layout_constraintTop_toBottomOf="@+id/tvUsuario"
        app:srcCompat="@drawable/icon" />

    <Button
        android:id="@+id/btnSalida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="94dp"
        android:background="#1976D2"
        android:textColor="@android:color/background_light"
        android:onClick="irSalida"
        android:text="Salida"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnIngreso"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etPlacaMain"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:hint="Placa"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnIngreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="160dp"
        android:background="#1976D2"
        android:textColor="@android:color/background_light"
        android:onClick="irIngreso"
        android:text="Ingreso"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnSalida" />

    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="41dp"
        android:text="usuario"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>