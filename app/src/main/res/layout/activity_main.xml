<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/usuario"
        android:textSize="18sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="64dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="@string/lblLogo"
        app:srcCompat="@drawable/icon" />

    <EditText
        android:id="@+id/etPlacaMain"
        android:layout_width="220dp"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="29dp"
        android:hint="@string/lblPlaca"
        android:inputType="textPersonName"
        android:textSize="24sp"
        android:importantForAutofill="no" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/btnIngreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1976D2"
            android:onClick="irIngreso"
            android:text="@string/lblIngreso"
            android:textColor="@android:color/background_light" />

        <Space
            android:layout_width="32dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/lblSalir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1976D2"
            android:onClick="irSalida"
            android:text="@string/lblSalida"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

</LinearLayout>